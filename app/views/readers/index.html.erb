<h1>Readers</h1>
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Published Date</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to "#{post.title}", post.url %></td>
        <td><%= post.published.to_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
